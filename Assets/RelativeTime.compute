#pragma kernel CSMain

struct Clock {
	float2 uv;
	float t;
};
StructuredBuffer<Clock> clocksPrev;
RWStructuredBuffer<Clock> clocksCurr;
float dt;

[numthreads(256,1,1)]
void CSMain (uint3 id : SV_DispatchThreadID) {
    Clock c = clocksPrev[id.x];
    
    if (c.t >= 0.0)
    	c.t += dt;
    
    clocksCurr[id.x] = c;
}
