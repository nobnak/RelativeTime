#pragma kernel CSMain

struct Clock {
	float2 uv;
	float t;
};
StructuredBuffer<Clock> clocksIn;
RWStructuredBuffer<Clock> clocksOut;
float dt;

[numthreads(256,1,1)]
void CSMain (uint3 id : SV_DispatchThreadID) {
    Clock c = clocksIn[id.x];
    
    if (c.t >= 0.0)
    	c.t += dt;
    
    clocksOut[id.x] = c;
}
